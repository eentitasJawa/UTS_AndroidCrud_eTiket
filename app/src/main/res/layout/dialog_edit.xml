<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✏️ Edit Booking"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Penumpang"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEditNama"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter passenger name"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Destination -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tujuan"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEditTujuan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter destination"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Keberangkatan"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEditTanggal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Select travel date"
        android:inputType="date"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Ticket Quantity -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Tiket"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEditJumlah"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter ticket quantity"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Payment Amount -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukan Jumlah Uang"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etEditBayar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter payment amount"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:background="#666666"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Save Changes"
            android:textSize="16sp"
            android:background="#4A90E2"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>